<log4net>
    <!-- 定义控制台Appender -->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger - %message%newline" />
        </layout>
    </appender>

    <!-- 定义文件Appender -->
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
        <file value="Logs\\application.log" /> <!-- 指定日志文件的路径 -->
        <appendToFile value="true" /> <!-- 是否追加到文件末尾 -->
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" /> <!-- 锁定模式 -->
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date{ABSOLUTE} %level %logger - %message%newline" />
        </layout>
    </appender>

    <!-- 配置根logger，使其包含所有级别的日志，并引用上面定义的两个Appender -->
    <root>
        <level value="ALL" />
        <appender-ref ref="ConsoleAppender" />
        <appender-ref ref="FileAppender" />
    </root>
</log4net>